<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="title" content="To Do List">
        <meta name="description" content="This is a simple application that allows the user generate task cards for organize his day">
        <meta name="keywords" content="todo, todolist, list, organize, checklist">
        <meta name="robots" content="index, nofollow">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="language" content="English">
        <meta name="author" content="Camilo Canclini">
        <title>To Do List</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="./css/main.css">
    </head>
<body>
    <nav class="navbar bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <i class="fa-solid fa-clipboard-list fs-2 me-3" id="logo_page"></i>
            <span class="fs-2">
                To Do List 
            </span>
          </a>
        </div>
      </nav>
      <main class="container-fluid">
        <div class="new_task bg-dark rounded-4 mt-4" data-bs-theme="dark">
            <form action="/newTask" method="POST" class="p-3 px-5">
                <input type="text" name="title" class="" placeholder="Task title">
                <textarea type="text" class="" name="content" placeholder="Task Content..."></textarea>
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i></button>
            </form>
        </div>
        <div class="container-fluid tasks_container">
            <% tasks.forEach(task => { %>
                <%- include('./partials/task',{title: task.title, content: task.content}) %>
            <% }) %> 
        </div>
      </main>
</body>
